{% set banners=[
    {
        "image": asset("images/banners/banner-5.jpg")
    },
    {
        "image": asset("images/banners/banner-2.jpg")
    },
    {
        "image": asset("images/banners/banner-3.jpg")
    },
    {
        "image": asset("images/banners/banner-4.jpg")
    }
] %}
<section class="home-block home-block--banners container {{ is_repeated?'repeated-block mt-8':'mt-16' }}">
    <div class="grid grid-cols-2 md:grid-cols-3 grid-flow-row gap-3 sm:gap-8">
        <div class="col-span-2 sm:col-span-1 sm:row-span-2  bg-warmGray-200 transition-opacity hover:opacity-95 bg-cover h-lg-banner text-white text-center p-5 rounded-md overflow-hidden relative" style="background-image: url('{{ asset('images/banners/banner-1.jpg') }}');">
            <a href="#"
               class="flex flex-col justify-center  h-full p-11 relative z-20 xs:border border-dashed border-border-color rounded-md">
                <h3 class="text-2xl font-bold leading-12 mb-5">وحدات تحكم متوافق مع بلاي ستيشن 3</h3>
                <p>تصميم مريح لبصمة اليد، استجابة بالاهتزاز Dualshock، تجربة لعب سهلة وممتعة</p>
            </a>
            <div class="overlay h-full w-full bg-dark opacity-60 absolute top-0 left-0 z-10"></div>
        </div>

        {% for banner in banners %}
            <div class="banner relative p-2 xs:p-4 overflow-hidden transition-opacity hover:opacity-95 text-white text-center  bg-warmGray-200  rounded-md h-banner bg-cover"
                 style="background-image: url('{{banner.image}}');">
                <!-- <a href="#" class="overlay h-full w-full bg-dark opacity-20 absolute top-0 left-0 z-10"></a> -->

                <a href="#"
                   class="bannerــtext flex md:opacity-0 hover:opacity-100 transition-opacity duration-500 flex-col justify-center  h-full p-0 xs:p-6 relative z-20 xs:border border-dashed border-border-color rounded-md">
                    <h3 class="banner__title text-md font-bold  mb-1 leading-6">وحدات تحكم متوافق</h3>
                    <p class="banner__description">تصميم Dualshock، تجربة لعب سهلة وممتعة</p>
                </a>
                <div class="overlay h-full w-full bg-dark opacity-60 absolute top-0 left-0 z-10"></div>
            </div>
        {% endfor %}

    </div>
</section>