<script>
    function initAddToCart() {
        return {
            addToCart: function (id) {
                let newId = id.replace(/product_/g, '');
                window.addTocartAnimation(newId);
            }
        }
    }

    function initAddToFavorite() {
        return {
            reminderModal : false,
            inFavorite    : false,
            showMore      : false,
            toggleFavorite: function () {
                this.inFavorite = !this.inFavorite;
            },
        }
    }

    function initDonation() {
        return {
            donationAmount: '',
            isDonationAdded: false,
            isShowCopounError: false,
            addDonation: function () {
                if (this.donationAmount) {
                    this.isShowCopounError = false;
                    this.isDonationAdded = !this.isDonationAdded;
                    if (!this.isDonationAdded) {
                        this.donationAmount = '';
                    }
                } else {
                    this.isShowCopounError = true;
                }
            }
        }
    }
</script>