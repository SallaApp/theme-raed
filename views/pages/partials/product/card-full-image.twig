<div id="product_{{ product.id }}" class="product-entry product-entry--full-image {{ not product.is_available and not product.is_donation ? 'out-of-stock':'' }}">
    <a href="{{ product.url }}" class='relative overflow-hidden rounded-md hover:opacity-90 w-full h-full'>
        <img class="h-full w-full object-cover lazy-load" src="{{asset('images/s-empty.png')}}" data-src="{{product.image.url}}" alt="{{ product.image.alt }}" />
    </a>

     <!-- badage -->
    {% if product.promotion_title %}
    <div class="absolute z-10 top-4 start-0">
        <div class="font-bold px-3 py-2 text-sm bg-red-400 text-white rounded-e-md">{{ product.promotion_title }}</div>
     </div>
    {% endif %}


    <!-- content -->
    <!-- overlay -->
    <a href="{{ product.url }}" class="overlay transition-opacity duration-700 opacity-50 hover:opacity-40 absolute top-0 bottom-0 left-0 right-0 bg-black"></a>

    <div class="absolute z-10 bottom-0 px-10  w-full pt-5 pb-7 ">
        <div class="flex  justify-between items-baseline">
            <!-- title -->
            <h3 class="product-entry__title  text-sm font-bold text-white leading-6 mb-2.5">
                <a href="{{ product.url }}">{{product.name}}</a>
            </h3>
        </div>
      
        <div class="w-full center-between mb-5">
            {% if product.on_sale %}
                <div class="space-s-1">
                    <h4 class="text-theme-red font-bold text-sm inline-block">{{ product.sale_price|money }}</h4>
                    <span class="text-sm text-gray-400 line-through">{{ product.regular_price|money }}</span>
                </div>
            {% else %}
                <h4 class="text-white font-bold text-sm">{{ product.price|money }}</h4>
            {% endif %}

            {% if product.rating %}
                <div class="text-sm text-white">
                  <i class="sicon-star2 text-amber-400"></i>
                  <span>{{ product.rating|number }}</span>
                </div> 
            {% endif %}
        </div>
        <div class="flex items-center">
            <button data-on-click="cart::quick.add" data-id="{{ product.id }}"
                    {% if not product.is_available %} disabled {% endif %} class="btn btn--has-loading btn--outline-primary">
                <span class="btn__text">
                  {% if product.is_available %}
                      {{ trans('pages.cart.add_to_cart') }}
                  {% elseif product.is_donation %}
                      {{ trans('pages.products.donation_exceed') }}
                  {% else %}
                      {{ trans('pages.products.out_of_stock') }}
                  {% endif %}
                </span>
            </button>
            <button aria-label="Add or remove to wishlist" class="btn--wishlist animated"
                {% if user.type=='user' %}
                    data-on-click="wishlist::add" data-id="{{ product.id }}"
                {% else %}
                    onClick="salla.error('{{ trans('common.messages.must_login') }}')"
                {% endif %}>
                <i class="sicon-heart"></i>
                <span class="loader loader--small"></span>
            </button>
        </div>
    </div>
</div>