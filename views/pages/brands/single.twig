{#
| Variable          | Type                 | Description                                               |
|-------------------|----------------------|-----------------------------------------------------------|
| page              | object               |                                                           |
| page.title        | string               |                                                           |
| page.slug         | string               |                                                           |
| products          | Product[] *Paginator |                                                           |
| brand             | Brand *              |                                                           |
| brand.id          | int                  |                                                           |
| brand.name        | string               |                                                           |
| brand.url         | string               |                                                           |
| brand.logo        | string               |                                                           |
| brand.banner      | ?string              | Null when is not set, or merchant doesn't want to show it |
| brand.description | string               |                                                           |
#}
{% extends "layouts.master" %}
{% block content %}

  {# Brand banner #}
  {% if brand.banner %} 
        <div class="brand-page__banner">
            <img class="lazy-load w-full max-h-[300px] object-cover rounded-md bg-gray-100" data-src="{{ brand.banner }}" src="{{ 'images/s-empty.png' | asset }}" alt="{{ brand.name }}"/>
        </div>
    {% endif %}

    <div class="container">
        {% component 'header.breadcrumbs' %}
        {% hook 'brands:single.details.start' %}
   
        {# brand header #}
        <header class="flex mt-2 mb-12 md:mb-20">
            <img class="rounded-md w-40 h-24 object-contain  shadow-md p-4 bg-white lazy-load" data-src="{{ brand.logo }}" src="{{ 'images/s-empty.png' | asset }}" alt="{{ brand.name }}">
            <div class="px-5 pt-3">
                <h1 class="text-2xl font-bold mb-1">{{ brand.name }}</h1>
                <p class="text-base text-gray-500">{{ brand.description|raw }}</p>
            </div>
        </header>

        {% hook 'brands:single.details.end' %}

        <div class="flex items-start flex-col md:flex-row">
            <div class="main-content w-full">
                {% if products|length %}
                    <div class="mb-5 md:flex justify-between items-center">
                        <div class="center-between">
                            <div class="hidden items-center ms-2 md:ms-2">
                                <a href="#" data-type="grid" class="grid-trigger bg-border-color !text-primary">
                                    <i class="sicon-grid"></i>
                                </a>
                                <a href="#" data-type="list" class="grid-trigger">
                                    <i class="sicon-list"></i>
                                </a>
                            </div>
                        </div>
                    </div>

                    {% hook 'brands:single.items.start' %}

                    <salla-infinite-scroll
                            class="md:grid-cols-auto-fill mb-8 products-container gird-view grid sm:grid-cols-2 grid-flow-row gap-6"
                            next-page="{{ products.next_page }}" next-page.autoload>
                        {% for product in products %}
                            {% include 'pages.partials.product.card' with {block_classes:'list-block'} %}
                        {% endfor %}
                    </salla-infinite-scroll>

                    {% hook 'brands:single.items.end' %}
                {% else %}
                    <div class="no-content-placeholder">
                            <span class="rounded-icon !w-36 !h-36 bg-gray-bg mb-6">
                                <i class="sicon-award-ribbon text-6xl block text-reverse-dark"></i>
                            </span>
                        <p class="text-sm mb-5 text-center">
                            <span>{{ trans('pages.brands.non_products') }}</span>
                            {{ brand.name }}
                        </p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
