{% hook 'body:end' %}
{% hook 'scripts' %}

{% block scripts %}{% endblock %}
{% if error %}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            salla.error('{{ error }}');
        })
    </script>
{% endif %}
</body>
</html>