    static get states() {
        return {
            "daysLabel": {},
            "hoursLabel": {},
            "minutesLabel": {},
            "secondsLabel": {},
            "endLabel": {},
            "invalidDate": {},
            "offerEnded": {},
            "countInterval": {},
            "days": {},
            "hours": {},
            "minutes": {},
            "seconds": {}
        };
    }
    static get methods() {
        return {
            "endCountDown": {
                "complexType": {
                    "signature": "() => Promise<void>",
