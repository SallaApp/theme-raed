    static get states() {
        return {
            "hasOutOfStockOption": {},
            "hasSubscribedOptions": {},
            "selectedOptions": {},
            "showQuickBuy": {},
            "isApplePayActive": {},
            "buyNowText": {}
        };
    }
    static get events() {
        return [{
                "method": "success",
                "name": "success",
                "bubbles": true,
                "cancelable": true,
                "composed": true,
                "docs": {
                    "tags": [],
                    "text": "Custome DOM event emitter when product gets added to cart successfully."
                },
