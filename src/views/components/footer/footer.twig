<footer class="store-footer">
  <div aria-label="footer" class="bg-gray-800 text-white py-11 lg:pt-28 lg:pb-40 border-b border-dashed border-b-gray-500">
    <div class="container grid grid-col-1 lg:grid-cols-6 gap-10 lg:gap-6">
        <div class="lg:col-span-2 lg:pe-20">
          <a href="{{ link('/') }}" class="flex items-center mb-6 text-primary hover:text-primary-d">
            <img src="{{ store.logo }}" alt="" class="img-fluid w-10 b-logo">
            <h2 class="text-2xl font-bold mx-1.5 fix-align leading-none">{{ store.name }}</h2>
          </a>
          {% if store.description %}
            <p class="max-w-sm leading-6 mb-6">
              {{ store.description|raw }}
            </p>
          {% endif %}

          {% component 'footer.social' %}

          {# vat #}
          {% if store.settings.tax.number %}
            <div class="flex space-s-2 items-end">
              {% if store.settings.tax.certificate %}
                <a onclick="document.querySelector('#modal-value-tax').open()" href="#!" alt="{{ store.settings.tax.number }}">
                  <img src="{{ 'images/tax.png'|cdn }}" class="w-10 rounded-sm hover:opacity-80 transition-opacity" alt="value added tax">
                </a>
              {% endif %}
              <div>
                <p class="text-sm text-text-grey mb-1">{{ trans('common.elements.tax_number') }}</p>
                <b class="text-sm">{{ store.settings.tax.number }}</b>
              </div>
            </div>

            {% if store.settings.tax.certificate %}
              <salla-modal sub-title-first sub-title="{{ trans('common.elements.tax_number') }}" modal-title="{{ store.settings.tax.number }}" id="modal-value-tax">
                <div class="flex justify-center max-w-full">
                  <img src="{{ store.settings.tax.certificate }}" alt="{{ store.settings.tax.number }}"/>
                </div>
              </salla-modal>
            {% endif %}
          {% endif %}
        </div>

        {% component 'footer.menu' %}
        {% component 'footer.contacts' %}
        {% component 'footer.mobile-apps' %}
    </div>
  </div>
  <div class="md:flex items-center justify-between py-4 lg:px-0 container text-center">
    {% hook copyright %}
    {% component 'footer.payment-methods' %}
  </div>
</footer>
