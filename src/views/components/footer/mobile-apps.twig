{#
| Variable    | Type   | Description          |
|-------------|--------|----------------------|
| apps        | array  |                      |
| apps[].name | string | appstore, googleplay |
| apps[].url  | string |                      |
#}
{% if apps|length %}
  <div class="lg:col-span-2 rtl:lg:pr-20 ltr:lg:pl-20">
    <h3>{{trans('blocks.footer.download_apps')}}</h3>
    <div class="flex">
      {% for app in apps %}
          <a href="{{ app.url }}" rel="noreferrer" target="_blank"  class="rtl:ml-4 ltr:mr-4 leading-none hover:text-primary">
              <img alt="{{ app.name }}" src="{{ ('images/'~ app.name ~'.png') | cdn }}"/>
          </a>
      {% endfor %}
    </div>
  </div>
{% endif %}
