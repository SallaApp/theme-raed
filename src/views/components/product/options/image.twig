{#
| Variable   | Type          | Description                                             |
|------------|---------------|---------------------------------------------------------|
| option     | ProductOption | @see views/pages/partials/product/options.twig          |
| attirubtes | string        | ex: ` id="field_1819067185_562106943"  required `       |
| disabled   | bool          |                                                         |
| required   | bool          |                                                         |
| value      | ?string       |                                                         |
| item_id    | ?int          |                                                         |
#}
<input name="options[{{ option.id }}]"
       class="filepond form-control filepond--option-image{{ required?' required':'' }}"
       data-max-file-size="3MB"
       data-url="{{ link('cart/option-image') }}"
       data-instant-upload
       {% if is_page('cart') %}
       data-item-id="{{ item_id }}"
       {% endif %}
       {% if value %}
       data-default="{{ value }}"
       {% endif %}
        {{ attirubtes|raw }}
       type="file"/>