{#
| Variable        | Type       | Description                                                      |
|-----------------|------------|------------------------------------------------------------------|
| display_all_url | ?string    | If it's existed, mean should show load more link to this url     |
| title           | string     |                                                                  |
| products        | Products[] |                                                                  |
| position        | Int        | Sorting number start from zero                                   |
#}
{% set is_vertical = theme.settings.get('vertical_fixed_products') %}
<section class="s-block container">
    <div class="center-between mb-6 sm:mb-8">
        {% if title %}
            <h2 class="s-block__title">{{ title }}</h2>
        {% endif %}
        {% if display_all_url %}
            <a href="{{ display_all_url }}" class="s-block__display-all">{{ trans('blocks.home.display_all') }}</a>
        {% endif %}
    </div>
    <div class="grid {{ is_vertical ? 'grid-cols-2 md:grid-cols-3 lg:grid-cols-4' : 'grid-cols-1 lg:grid-cols-2' }} gap-2.5 sm:gap-6 lg:gap-8">
        {% for product in products %}
            {% include 'pages.partials.product.card' with { is_horizontal: is_vertical ? false : true, show_desc:true } %}
        {% endfor %}
    </div>
</section>

