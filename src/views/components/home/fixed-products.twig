{#
| Variable        | Type       | Description                                                      |
|-----------------|------------|------------------------------------------------------------------|
| display_all_url | ?string    | If it's existed, mean should show load more link to this url     |
| title           | string     |                                                                  |
| products        | Products[] |                                                                  |
| position        | Int        | Sorting number start from zero                                   |
#}
{% set is_vertical = theme.settings.get('vertical_fixed_products', true) %}
<section class="s-block container">
    {% if title %}
      <div class="s-block__title">
        <div class="right-side">
          <h2>{{ title }}</h2>
          {# <p>عنوان فرعي توصيفي صغير</p> #}
        </div>
        {% if display_all_url %}
            <a href="{{ display_all_url }}" class="s-block__display-all">{{ trans('blocks.home.display_all') }} <i class="sicon-arrow-left"></i></a>
        {% endif %}
      </div>
    {% endif %}
    
    <div class="grid {{ is_vertical ? 'grid-cols-2 md:grid-cols-3 lg:grid-cols-4' : 'grid-cols-1 lg:grid-cols-2' }} {{is_vertical ? 'vertical-products' : 'horizontal-products'}} gap-2.5 sm:gap-6 lg:gap-8">
        {% for product in products %}
            {% include 'pages.partials.product.card' with { is_horizontal: is_vertical ? false : true, show_desc:true } %}
        {% endfor %}
    </div>
</section>

 
