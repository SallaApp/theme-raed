{#
| Variable          | Type    | Description                                                      |
|-------------------|---------|------------------------------------------------------------------|
| items             | array   | List of sliders                                                  |
| items[].url       | string  |                                                                  |
| items[].link_type | ?String | category,product,offers,page,external_link,brand                 |
| items[].image.url | string  |                                                                  |
| items[].image.alt | string  |                                                                  |
| position          | Int     | Sorting number start from zero                                   |
#}
<section id="photos-{{ position }}" class="s-block s-block--photos-slider {{ is_repeated?'repeated-block':'' }}">
    <div class="swiper home-slider photos-slider" data-id="photos-{{ position }}">
        <div class="swiper-wrapper">
            {% for item in items %}
              <a href="{{item.url}}" class="swiper-slide">
              {% if loop.first %}
                <img loading="eager" fetchpriority="high" src="{{ item.image.url }}" class="w-full h-full object-cover"></img>
              {% else %}
                <img src="{{ 'images/s-empty.png' | asset }}" data-src="{{ item.image.url }}" class="lazy-load w-full h-full object-cover swiper-lazy"></img>
              {% endif %}
              </a>
            {% endfor %}
        </div>
        <div class="swiper-pagination"></div>

        <button aria-label="Previous Slide" class="slider-prev btn--md-white-arrow">
          <i class="sicon-keyboard_arrow_right"></i>
        </button>
        <button aria-label="Next Slide" class="slider-next btn--md-white-arrow">
          <i class="sicon-keyboard_arrow_left"></i>
        </button>
    </div>
</section>