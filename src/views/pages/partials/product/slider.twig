{% if products|length %}
    <salla-products-slider
    source="selected"
    limit="{{ limit }}"
    {{ autoplay ? 'autoplay' : '' }}
    source-value="[{{ products|map((product) => product.id)|join(',') }}]"
    display-all-url="{{display_all_url}}"
    block-title="{{ title }}"
    block-subTitle="{{ sub_title|raw }}"
    slider-id="slider-with-bg-{{ position }}"
    ></salla-products-slider>
{% endif %}

